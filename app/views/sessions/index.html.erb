
<h1>Login</h1>

<form action='/sessions' method='post'>
	<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>

	<p><label for='email'>Email:</label>
	<input id="email" name="email" type="text"></p>

	<p><label for='password'>Password:</label>
	<input type="password" id="password" name="password" type="text"></p>

	<p><input type="submit" value="Log In"></p>
</form>

<h1>Register</h1>

<form action='/users' method='post'>
	<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>

	<p><label for='first_name'>First Name: </label>
	<input id="first_name" name="user[first_name]" type="text"></p>

	<p><label for='last_name'>Last Name: </label>
	<input id="last_name" name="user[last_name]" type="text"></p>

	<p><label for='email'>Email: </label>
	<input id="email" name="user[email]" type="text"></p>

	<p><label for='password'>Password: </label>
	<input type="password" id="password" name="user[password]" type="text"></p>

	<p><label for='password_confirmation'>Password Confirmation: </label>
	<input type="password" id="password_confirmation" name="user[password_confirmation]" type="text"></p>

	<p><input type="submit" value="Register"></p>
</form>